body {
    font-family: 'Georgia', serif;
    background-color: #fff9f8;
    color: #2e2e2e;
    margin: 0;
    padding: 0;
}

header {
    text-align: center;
    padding: 2rem 1rem;
}

header h1 {
    color: #f25c42;
    font-size: 3rem;
    margin-bottom: 0.5rem;
}

header p {
    font-size: 1rem;
    margin-bottom: 1rem;
}

nav a {
    margin: 0 10px;
    color: #f25c42;
    text-decoration: none;
    font-weight: bold;
}

.card-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    padding: 2rem 1rem;
}

.card {
    background: white;
    padding: 1.5rem;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    width: 800px;
    max-width: 100%;
}

.card h2,
.card h3 {
    color: #f25c42;
}

.download,
.back {
    display: block;
    margin-top: 1rem;
    text-decoration: none;
    color: #1e40af;
    font-weight: bold;
}

.project-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
}

.images {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
}

.images img {
    height: 120px;
    border-radius: 8px;
    object-fit: cover;
}

img {
    max-width: 100%;
    height: auto;
    margin-top: 0.5rem;
    border-radius: 5px;
}

code {
    display: block;
    background-color: #f3f4f6;
    padding: 0.5rem;
    border-radius: 5px;
    margin-top: 0.5rem;
    font-family: 'Courier New', Courier, monospace;
}

.highlight {
    color: #1e40af;
}
